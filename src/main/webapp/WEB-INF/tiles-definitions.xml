<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
    "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
    "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

  <definition name="base" template="/WEB-INF/templates/template.jsp">
    <put-attribute name="header" value="/WEB-INF/templates/header.jsp" />
    <put-attribute name="body" value="" />
    <put-attribute name="footer" value="/WEB-INF/templates/footer.jsp" />
  </definition>



  <definition name="index" extends="base">
    <put-attribute name="body" value="/WEB-INF/jsp/index.jsp" />
  </definition>

  <definition name="message" extends="base">
    <put-attribute name="body" value="/WEB-INF/jsp/message.jsp" />
  </definition>

  <definition name="registration" extends="base">
    <put-attribute name="body" value="/WEB-INF/jsp/registration.jsp" />
  </definition>

  <definition name="admin" extends="base">
    <put-attribute name="header" value="/WEB-INF/templates/adminHeader.jsp"/>
    <put-attribute name="body" value="/WEB-INF/jsp/admin.jsp" />
  </definition>

</tiles-definitions>